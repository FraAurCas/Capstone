    <div > <!-- Searchbar -->
        <input type="text" placeholder="Search.." id="searchbox">
        <a class="waves-effect waves-light btn-small navbar" onclick="addUrlParameter('search', document.getElementById('searchbox').value)">Search</a>
    </div>

    <table class="highlight centered responsive-table">
        <thead>
            <th>Client Name</th>
            {{#if include_office}}
                <th>Office/Market</th>
            {{/if}}
            {{#if include_broker}}
                <th>Placement Broker</th>
            {{/if}}
            {{#if include_executive}}
                <th>Client Advocate/Account Executive</th>
            {{/if}}
            {{#if include_industry}}
                <th>SIC Code/Industry</th>
            {{/if}}
            {{#if include_revenue}}
                <th>Revenue (Band)</th>
            {{/if}}
            {{#if include_footprint}}
                <th>Global Footprint (Number of Countries)</th>
            {{/if}}
            {{#if include_limits}}
                <th>Limits</th>
            {{/if}}
            {{#if include_losses}}
                <th>Losses</th>
            {{/if}}
            {{#if include_retentions}}
                <th>Retentions</th>
            {{/if}}
        </thead>
        <tbody>
            <tr>
                {{#each array}}
                <tr>
                    {{#each this}}
                    <td>{{this}}</td>
                    {{/each}}
                </tr>
                {{/each}}
            </tr>
        </tbody>
    </table>
</div>

