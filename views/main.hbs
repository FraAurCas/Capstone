    <div>
        <!-- Searchbar -->
        <input type="text" placeholder="Search.." id="searchbox">
        <a class="waves-effect waves-light btn-small navbar"
            onclick="addUrlParameter('search', document.getElementById('searchbox').value)">Search</a>
    </div>

    <table class="highlight centered responsive-table">
        <thead>
            <th>ID</th>
            {{#if include_segment}}
                <th>Broking Segment</th>
            {{/if}}
            {{#if include_region}}
                <th>Broking Region</th>
            {{/if}}
            {{#if include_industry}}
                <th>Industry</th>
            {{/if}}
            {{#if include_hazardGroup}}
                <th>Hazard Group</th>
            {{/if}}
            {{#if include_revenue}}
                <th>Global Revenue</th>
            {{/if}}
            {{#if include_powerUnits}}
                <th>Power Units</th>
            {{/if}}
            {{#if include_insurableVaue}}
                <th>Total Insurable Value</th>
            {{/if}}
            {{#if include_payroll}}
                <th>Payroll</th>
            {{/if}}
            {{#if include_catastrophe}}
                <th>Catastrophe Exposure</th>
            {{/if}}
        </thead>
        <tbody>
            <tr>
                {{#each array}}
                <tr>
                    {{#each this}}
                    <td onclick="location.href='/account/{{this.id}}'">{{this}}</td>
                    {{/each}}
                </tr>
                {{/each}}
            </tr>
        </tbody>
    </table>
</div>

