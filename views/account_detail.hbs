{{#with array}}
<div class="container">
    <div class="card purple lighten-5">
        <span class="card-title">
            <h1>{{0.ID}}</h1>
            
        </span>
    </div>
</div>
<!--<div class="card-content">-->
<div class="container">
<div class="card">
    <table class="highlight centered responsive-table">
        <thead>
            <tr>
                <th>Broking Segment </th> 
                <th>Broking Region </th>
                <th>Industry</th>
                <th>Hazard Group</th>
                <th>Revenue</th>
                <th>Power Units</th>
                <th>Insurable Value</th>
                <th>Payroll</th>
                <th>Catastrophe Exposure</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{0.segment}}</td>
                <td>{{0.region}}</td>
                <td>{{0.industry}}</td>
                <td>{{0.hazardGroup}}</td>
                <!--> <$500,000,000; $500,000,001 - $1,000,000,000; $1,000,000,001 - $10,000,000,000; $10,000,000,001 - $50,000,000,000; >$50,000,000,001 </-->
                {{#if (compareNum 0.revenue 500000000)}}
                    <td>&60;&#36;500&#44;000&#44;000
                <td>{{0.revenue}}</td>
                <!--><50; 51-100; 101-500; 501-2,000; >2,001</-->
                {{#if (compareNum 0.powerUnits 50)}}
                    <td>&#60;50</td>
                {{else if (compareNum 0.powerUnits 51)}}
                    <td>&#36;51 &#45; 100</td>
                {{else if (compareNum 0.powerUnits 101)}}
                    <td>&#36;101 &#45; 500</td>
                {{else if (compareNum 0.powerUnits 501)}}
                    <td>&#36;501 &#45; 2&#44;000</td>
                {{else if (2001)}}
                    <td>&#62;2&#44;001</td>
                {{/if}}
                <!--><$1,000,000,000; $1,000,000,001 - $10,000,000,000; $10,000,000,001 - $50,000,000,000; $50,000,000,001 - $100,000,000,000; >$100,000,000,001</-->
                <td>{{0.insurableValue}}</td>
                <!--><$10,000,000; $10,000,001 - $100,000,000; $100,000,001 - $500,000,000; $500,000,001 - $2,000,000,000; $2,000,000,001 - $10,000,000,000; >$10,000,000,001</-->
                <td>{{0.payroll}}</td>
                <td>{{0.catastrophe}}</td>
            </tr>
        </tbody>
    </table>
</div>
</div>
<div class="container account-details">{{"Here we can have more text for a description"}}</div>
</div>
</div>
{{/with}}