{{#with array}}
<div class="container">
    <div class="card purple lighten-5">
        <span class="card-title">
            <h1><center>{{0.ID}}</center></h1>
        </span>
        <center>
            <div class="button_wrapper">
                <button class="submit waves-effect waves-light btn btn-large main_color" type="submit">Edit Account</button>
            </div>
        </center>
    </div>
</div>
<!--<div class="card-content">-->
<div class="container">
<div class="card">
    <table class="highlight centered responsive-table">
        <thead>
            <tr>
                <th>Broking Segment </th> 
                <th>Broking Region </th>
                <th>Industry</th>
                <th>Hazard Group</th>
                <th>Revenue</th>
                <th>Power Units</th>
                <th>Insurable Value</th>
                <th>Payroll</th>
                <th>Catastrophe Exposure</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{0.segment}}</td>
                <td>{{0.region}}</td>
                <td>{{0.industry}}</td>
                <td>{{0.hazardGroup}}</td>
                <td>{{0.revenue}}</td>
                <td>{{0.powerUnits}}</td>
                <td>{{0.insurableValue}}</td>
                <td>{{0.payroll}}</td>  
                <td>{{0.catastrophe}}</td>
            </tr>
        </tbody>
    </table>
</div>
</div>
<div class="container account-details">{{"Here we can have more text for a description"}}</div>
</div>
</div>
{{/with}}